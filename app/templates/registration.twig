{% extends "extend.twig" %}
{% block body %}
<div class="row">
    <div class="large-6 large-centered medium-6 medium-centered columns">
        <div class="reg-form">
            <form action="/reg" method="POST" accept-charset="utf-8" class="role-reg-form">
                <div class="row collapse">
                    <div class="medium-8 columns">
                        <input type="text" placeholder="Email" name="email" class="role-email">
                    </div>
                    <div class="medium-4 columns">
                        <input type="submit" class="button postfix role-reg-sendmail" value="发送验证邮件">
                    </div>
                </div>
                <div class="row role-email-error" style="display:none">
                    <div class="medium-12 columns"><small class="error">Email 地址无效</small></div>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/x-twig-template" id="template-email-sent">{% verbatim %}
<div class="row collapse">
    <div class="medium-12 columns">
        Email 已发送至：{{ email }}&nbsp;&nbsp;<a href="/ref" target="_self">重新填写地址</a>
    </div>
</div>
{% endverbatim %}</script>
{% endblock %}
{% block footer %}
<script>require(['openvj/page/reg']);</script>
{% endblock %}